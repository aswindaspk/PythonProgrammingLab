    "#Add ‘ing’ at the end of a given string. If it already ends with ‘ing’, then add ‘ly’.\n",
    "l=input('Enter a word:')\n",
    "if(l[-3:]=='ing'):\n",
    "    l=l+'ly'\n",
    "    print(\"The word is:\",l)\n",
    "else:\n",
    "    l=l+'ing'\n",
    "    print('The word is:',l)\n"
